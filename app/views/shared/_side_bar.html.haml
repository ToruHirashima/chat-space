-#①、②領域
.chat-side
  -# ①領域
  .side-header
    .side-header__top-items
      %p.side-header__top-items__name
        = current_user.name
      %ul.side-header__top-items__icons
        %li.side-header__top-items__icons__new--groups
        -# = link_to "new_group_path", class: "side-header__top-items__icons__new--groups" do
        = link_to new_group_path do
          = icon('fas', 'edit', class: "side-header__top-items__icons__new--groups__btn--icon")
        %li.side-header__top-items__icons__edit--user
        -# = link_to "#", class: "side-header__top-items__icons__edit--user" do
        -#  edit_user_path:GETの名前付きルート。特定のユーザーを表示。
        = link_to edit_user_path(current_user) do 
          = icon('fas', 'cog', class: "side-header__top-items__icons__edit--user__btn--icon")

  -# ②領域
  .groups
    - current_user.groups.each do |group|
      .group
        -# group_messages_path：？？？
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__group--name__latest--message
            = group.show_last_message
